#content
  %article(role="main")
    ~ @page.to_html(self)
    %section.pages
      = partial :summaries, :locals => { :pages => @page.pages }
    - unless @page.articles.empty?
      %section.articles
        = partial :summaries, :locals => { :pages => @page.articles, :heading => :h3 }
    = partial :page_meta, :locals => { :page => @page }
  = partial :comments
